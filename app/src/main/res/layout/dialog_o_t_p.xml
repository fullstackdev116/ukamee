<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/sms_verification"
            android:textSize="30dp"
            android:fontFamily="@font/exo_bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/otp" />

        <com.jkb.vcedittext.VerificationCodeEditText
            android:id="@+id/edit_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/exo_bold"
            android:layout_marginRight="20dp"
            app:bottomLineHeight="4dp"
            app:bottomLineNormalColor="@color/white"
            app:bottomLineSelectedColor="@color/white"
            app:figures="6"
            app:selectedBackgroundColor="@android:color/transparent"
            app:verCodeMargin="5dp" />
        <TextView
            android:id="@+id/txt_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>