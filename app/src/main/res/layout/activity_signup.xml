<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignupActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.7"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to"
                android:textSize="25dp"
                android:fontFamily="@font/aller_std_lt"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:fontFamily="@font/exo_bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please complete your verification"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textSize="17dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPadding="20dp"
                app:cardCornerRadius="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardBackgroundColor="@color/transparent"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/aller_std_lt"
                        android:hint="Phone number"
                        android:inputType="phone"
                        android:text="+2251234567890"
                        android:textColorHint="@color/orange"
                        app:met_baseColor="@android:color/white"
                        app:met_errorColor="@color/red"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelTextColor="@color/white"
                        app:met_maxCharacters="20"
                        app:met_primaryColor="@color/white"
                        app:met_singleLineEllipsis="true"
                        app:met_textColor="@color/white"
                        app:met_textColorHint="@color/gray"
                        app:met_underlineColor="@color/gray" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edit_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First name"
                        android:text=""
                        app:met_baseColor="@android:color/white"
                        app:met_floatingLabel="highlight"
                        app:met_maxCharacters="20"
                        android:fontFamily="@font/aller_std_lt"
                        app:met_textColor="@color/white"
                        app:met_textColorHint="@color/orange"
                        android:textColorHint="@color/gray"
                        app:met_underlineColor="@color/gray"
                        app:met_floatingLabelTextColor="@color/white"
                        app:met_errorColor="@color/red"
                        android:inputType="textPersonName"
                        android:enabled="true"
                        app:met_primaryColor="@color/white"
                        app:met_singleLineEllipsis="true"
                        />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edit_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last name"
                        android:text=""
                        app:met_baseColor="@android:color/white"
                        app:met_floatingLabel="highlight"
                        app:met_maxCharacters="20"
                        android:fontFamily="@font/aller_std_lt"
                        app:met_textColor="@color/white"
                        app:met_textColorHint="@color/orange"
                        android:textColorHint="@color/gray"
                        app:met_underlineColor="@color/gray"
                        app:met_floatingLabelTextColor="@color/white"
                        app:met_errorColor="@color/red"
                        android:inputType="textPersonName"
                        android:enabled="true"
                        app:met_primaryColor="@color/white"
                        app:met_singleLineEllipsis="true"
                        />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edit_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:text=""
                        app:met_baseColor="@android:color/white"
                        app:met_floatingLabel="highlight"
                        android:fontFamily="@font/aller_std_lt"
                        app:met_maxCharacters="256"
                        app:met_textColor="@color/white"
                        app:met_textColorHint="@color/orange"
                        android:textColorHint="@color/gray"
                        app:met_underlineColor="@color/gray"
                        app:met_floatingLabelTextColor="@color/white"
                        app:met_errorColor="@color/red"
                        android:enabled="true"
                        app:met_primaryColor="@color/white"
                        app:met_singleLineEllipsis="false"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verified"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:fontFamily="@font/aller_std_lt"
                    android:layout_gravity="end"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_frame_primary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you want to change your phone number?"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="17dp"
                android:fontFamily="@font/aller_std_lt"
                android:layout_gravity="center_horizontal"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click"
                    android:textColor="@color/white"
                    android:fontFamily="@font/aller_std_lt"
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    />
                <TextView
                    android:id="@+id/txt_change_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Here"
                    android:textColor="@color/orange"
                    android:padding="5dp"
                    android:textSize="17dp"
                    android:fontFamily="@font/exo_bold"
                    android:textAllCaps="false"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>